package pageObjects;

import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.support.FindBy;
import org.openqa.selenium.support.ui.ExpectedConditions;
import org.openqa.selenium.support.ui.Select;

public class SignUpPage extends BasePage {

	public SignUpPage(WebDriver driver) {
		super(driver);
	}

	@FindBy(xpath = "//*[text()='Enter Account Information']")
	WebElement txt_EnterAccInfo;

	public String get_msg_EnterAccountInformation() {
		try {
			return (txt_EnterAccInfo.getText());
		} catch (Exception e) {
			return (e.getMessage());
		}

	}

	@FindBy(xpath = "//input[@value='Mr']")
	WebElement radio_Mr;
	@FindBy(xpath = "//input[@value='Mrs']")
	WebElement radio_Mrs;
	@FindBy(xpath = "//input[@id='name']")
	WebElement txt_name;
	@FindBy(xpath = "//input[@id='email']")
	WebElement txt_email;
	@FindBy(xpath = "//input[@id='password']")
	WebElement txt_password;
	@FindBy(xpath = "//select[@name='days']")
	WebElement drp_days;
	@FindBy(xpath = "//select[@data-qa='months']")
	WebElement drp_months;
	@FindBy(xpath = "//select[@name='years']")
	WebElement drp_years;
	@FindBy(xpath = "//input[@id='newsletter']")
	WebElement chkbox_newsletter;
	@FindBy(xpath = "//input[@id='optin']")
	WebElement chkbox_option;
	@FindBy(xpath = "//input[@id='first_name']")
	WebElement txt_FirstName;
	@FindBy(xpath = "//input[@id='last_name']")
	WebElement txt_lastName;
	@FindBy(xpath = "//input[@data-qa='company']")
	WebElement txt_company;
	@FindBy(xpath = "//input[@name='address1']")
	WebElement txt_Address1;
	@FindBy(xpath = "//input[@name='address2']")
	WebElement txt_Address2;
	@FindBy(xpath = "//select[@id='country']")
	WebElement drp_country;
	@FindBy(xpath = "//input[@name='state']")
	WebElement txt_State;
	@FindBy(xpath = "//input[@name='city']")
	WebElement txt_city;
	@FindBy(xpath = "//input[@name='zipcode']")
	WebElement txt_zipcode;
	@FindBy(xpath = "//input[@name='mobile_number']")
	WebElement txt_MobNo;
	@FindBy(xpath = "//button[@data-qa='create-account']")
	WebElement btn_CreateAccount;

	public void select_Radio_Mr() {
		radio_Mr.click();
	}

	public void select_Radio_Mrs() {
		radio_Mrs.click();
	}

	public void set_Name(String name) {
		txt_name.sendKeys(name);
	}

	public void set_Email(String email) {
		txt_email.sendKeys(email);
	}

	public void set_password(String pass) {
		wait.until(ExpectedConditions.elementToBeClickable(txt_password)).sendKeys(pass);
	}

	public void select_Day(int value) {
		wait.until(ExpectedConditions.elementToBeClickable(drp_days));
		Select select = new Select(drp_days);
		select.selectByIndex(value);
	}

	public void select_Month() {
		Select select = new Select(drp_months);
		select.selectByValue("2");
	}

	public void select_Year(String year) {

		wait.until(ExpectedConditions.elementToBeClickable(drp_years));

		Select select = new Select(drp_years);
		select.selectByVisibleText(year);
	}

	public void Click_newslettarCheckbox() {
		chkbox_newsletter.click();
	}

	public void click_OptionCheckbox() {
		chkbox_option.click();
	}

	public void send_FirstName(String value) {
		wait.until(ExpectedConditions.visibilityOf(txt_FirstName)).sendKeys(value);
	}

	public void send_LastName(String value) {
		wait.until(ExpectedConditions.visibilityOf(txt_lastName)).sendKeys(value);
	}

	public void send_Company(String value) {
		txt_company.sendKeys(value);
	}

	public void send_Address1(String value) {
		txt_Address1.sendKeys(value);
	}

	public void send_Address2(String value) {
		txt_Address2.sendKeys(value);
	}

	public void select_Country(String value) {
		Select select = new Select(drp_country);
		select.selectByValue(value);
	}

	public void send_State(String value) {
		txt_State.sendKeys(value);
	}

	public void send_City(String value) {
		txt_city.sendKeys(value);
	}

	public void send_Zipcode(String value) {
		txt_zipcode.sendKeys(value);
	}

	public void send_mobileNumber(String value) {
		txt_MobNo.sendKeys(value);
	}

	public void click_CreateAccount() {
		btn_CreateAccount.click();
	}

	// --------------------------------------------------------------------------------------
	@FindBy(xpath = "//*[text()='Account Created!']")
	WebElement msg_AccountCreated;

	public String get_msg_AccountCreated() {
		try {
			return (msg_AccountCreated.getText());
		} catch (Exception e) {
			return (e.getMessage());
		}

	}

	@FindBy(xpath = "//p[contains(text(),'Congratulations! Your new account has been successfully created!')]")
	WebElement msg_Congratulatons;

	public String get_msg_Congratulatons() {
		try {
			return (msg_Congratulatons.getText());
		} catch (Exception e) {
			return (e.getMessage());
		}

	}

	@FindBy(xpath = "//*[@class='btn btn-primary']")
	WebElement btn_Continue;

	public void click_Continue() {
		btn_Continue.click();
	}

	@FindBy(xpath = "//*[text()=' Logged in as ']")
	WebElement confirm_LoggedInAs;

	public boolean Is_confirm_LoggedInAs() {
		return confirm_LoggedInAs.isEnabled();
	}

	@FindBy(xpath = "//*[text()=' Delete Account']")
	WebElement btn_DeleteAccount;

	public void clickDeleteAccount() {
		btn_DeleteAccount.click();
	}

	@FindBy(xpath = "//*[text()='Account Deleted!']")
	WebElement msg_AccountDeleted;

	public String get_msg_AccountDeleted() {
		try {
			return (msg_AccountDeleted.getText());
		} catch (Exception e) {
			return (e.getMessage());
		}

	}

	@FindBy(xpath = "//*[text()='Your account has been permanently deleted!']")
	WebElement msg_AccDeleteConfirmation;

	public String get_msg_AccountDeletedInformation() {
		try {
			return (msg_AccDeleteConfirmation.getText());
		} catch (Exception e) {
			return (e.getMessage());
		}

	}

	@FindBy(xpath = "//*[text()='Continue']")
	WebElement btn_ContinueAfterDelete;

	public void clickContinueAfterDelete() {
		btn_ContinueAfterDelete.click();
	}
}
