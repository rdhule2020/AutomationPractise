package testCases;

import org.testng.Assert;
import org.testng.annotations.Test;

import pageObjects.HomePage;
import pageObjects.LoginPage;
import testBase.BaseClass;

public class TC002_AccountLoginTest extends BaseClass{
	
	
	@Test
	public void Verify_LoginTest()
	{
		logger.info("*** Login Test ***");
		try
		{
		HomePage home = new HomePage(driver);
		home.click_signUpLoginLink();
		
		LoginPage login = new LoginPage(driver);
		
		if(login.IsloginToYourAccMsgExists())
		{
			logger.info("Enter email Address");
			login.send_LoginEmailAddress(p.getProperty("email"));
			logger.info("Enter Password");
			login.send_password(p.getProperty("password"));
			logger.info("");
			login.clickLogin();
		}else
		{
			logger.error("Login failed");
			logger.debug("Debug logs...");
			Assert.assertTrue(false);
		}
		}catch(Exception e) 
		{
			Assert.fail();
		}
	}

}
